<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net9.0-windows;net6.0-windows;net8.0-windows;net462</TargetFrameworks>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>disable</Nullable>

		<UseWPF>true</UseWPF>
		<RootNamespace>SkiaSharpEzz.Views.WPFGL</RootNamespace>
		<AssemblyName>SkiaSharpEzz.Views.WPFGL</AssemblyName>

		<PackageId>SkiaSharpEzz.Views.WPFGLv2</PackageId>
		<Description>To be used without dependency issues. (Uses SkiaSharp v2)</Description>
		<Authors>ezhassen</Authors>
		<RepositoryUrl>https://github.com/ezhassen/SkiaSharpEzz.Views</RepositoryUrl>
		<PackageIconUrl>https://github.com/ezhassen/SkiaSharpEzz.Views</PackageIconUrl>
		<Version>2.88.10</Version>
	</PropertyGroup>


	<ItemGroup>
		<PackageReference Include="SkiaSharp" Version="2.88.9" />
		<PackageReference Include="SkiaSharp.Views.Desktop.Common" Version="2.88.9" />
		<PackageReference Include="OpenTKEzz.GLWpfControl" Version="4.3.4" />
	</ItemGroup>

	<ItemGroup>
		<Compile Include="..\SkiaSharpEzz.Views.WPF\WPFExtensions.cs" Link="WPFExtensions.cs" />
		<Compile Include="..\SkiaSharpEzz.Views.WPFGL\SKGLElement.cs" Link="SKGLElement.cs" />
	</ItemGroup>

</Project>
